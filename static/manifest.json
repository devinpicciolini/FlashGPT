{
    "manifest_version": 3,
    "name": "FlashGPT",
    "description": "Improve Article Reading Comprehension",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.bundle.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.bundle.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "unlimitedStorage",
        "storage",
        "webNavigation"
    ]
}